<mvc:View
	controllerName="ui5.ShopStarWars.controller.Inicio"
	xmlns="sap.m"
	xmlns:f="sap.f"
	xmlns:mvc="sap.ui.core.mvc">
	<Page
		id="pageInicio">
		<customHeader>
			<Bar class="customHeaderLarge">
				<contentLeft>
					<HBox alignItems="Center" justifyContent="Center" width="100%" >
						<Image
							src="img/logo.png"
							width="24px"
							height="24px"
							alt="logo starWars"
							class="sapUiSmallMarginEnd"/> <!-- Margen a la derecha -->
						<Button
							icon="sap-icon://menu2"
							press=".onShowCategories"
							visible="{appView>/smallScreenMode}"/>
					</HBox>
				</contentLeft>
				<contentMiddle >
					<Title
						level="H1"
						tooltip="{i18n>welcomeDescription}"
						text="Bienvenido a la tienda"
						class="sapUiSmallMargin"/>
				</contentMiddle>
				<contentRight>
					<Button
						icon="sap-icon://customer"
						press=".onAvatarPress"
						tooltip="{i18n>avatarButtonTooltip}"/>
					<ToggleButton
						icon="sap-icon://cart"
						pressed="{= ${appView>/layout}.startsWith('ThreeColumns') }"
						tooltip="{i18n>toCartButtonTooltip}"
						press=".onToggleCart">
					</ToggleButton>
				</contentRight>
			</Bar>
		</customHeader>
	
	</Page>

</mvc:View>