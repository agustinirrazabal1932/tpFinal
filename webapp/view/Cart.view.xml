<mvc:View
	controllerName="ui5.ShopStarWars.controller.Cart"
	xmlns="sap.m"
	xmlns:mvc="sap.ui.core.mvc">
	<Page title="Carrito de Compras">
        <content>
            <List
                id="cartList"
                items="{
        			path: 'carts>/carritoCompra'
				}"
                growing="true"
                growingThreshold="5"
                delete=".onEliminardelCarrito"
                mode="Delete">
                <headerToolbar>
					<Toolbar>
						<Title text="Lista Para Comprar"/>
					</Toolbar>
				</headerToolbar>
                <items>
                    <CustomListItem>
                        <HBox alignItems="Center" justifyContent="SpaceBetween">
                            <!-- Informaci贸n del producto -->
                            <VBox class="sapUiSmallMargin">
								<Image src="../{carts>image}" width="100px"/>
                                <Text text="{carts>name}"/>
								<Text text="Cantidad: {carts>quantity}"/>
                                <Text text="Precio: {carts>price}"/>
                                <Text text="Subtotal: {= ${carts>price} * ${carts>quantity}}"/>
                            </VBox>
                            <!-- Cantidad y bot贸n -->
                            <VBox alignItems="End">
                            <Button
                                text="Favorito"
                                press="onCambiarListCarrito"
                                icon="sap-icon://add-favorite"
								type="Success"/>
                            </VBox>
                        </HBox>
                    </CustomListItem>
                </items>
            </List>
            <Toolbar>
                <ToolbarSpacer/>
                <Button
                    text="Proceder al Pago"
                    press="onCheckout"
                    type="Accept"/>

                <Text text="Total:{carts>/total}"/>
                
            </Toolbar>

            <List
                id="cartListGuardar"
                items="{
        			path: 'carts>/carritoGuardar'
				}"
                growing="true"
                growingThreshold="5"
                delete=".onEliminardelCarritoFav"
                mode="Delete">
                <headerToolbar>
					<Toolbar>
						<Title text="Lista De Favoritos" />
					</Toolbar>
				</headerToolbar>
                <items>
                    <CustomListItem>
                        <HBox alignItems="Center" justifyContent="SpaceBetween">
                            <!-- Informaci贸n del producto -->
                            <VBox class="sapUiSmallMargin">
								<Image src="../{carts>image}" width="100px"/>
                                <Text text="{carts>name}"/>
								<Text text="Cantidad: {carts>quantity}"/>
                                <Text text="Precio: {carts>price}"/>
                                <Text text="Subtotal: {= ${carts>price} * ${carts>quantity}}"/>
                            </VBox>
                            <!-- Cantidad y bot贸n -->
                            <VBox alignItems="End">
                                <Button
                                text="Carrito"
                                press="onCambiarListFav"
                                icon="sap-icon://cart-2"
								type="Emphasized"/>
                            </VBox>
                        </HBox>
                    </CustomListItem>
                </items>
            </List>

        </content>
    </Page>
</mvc:View>

